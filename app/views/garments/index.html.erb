<h1>Listing garments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Label</th>
    <th>Color</th>
    <th>Print</th>
    <th>Season</th>
    <th>Year</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @garments.each do |garment| %>
  <tr>
    <td><%= garment.name %></td>
    <td><%= garment.type %></td>
    <td><%= garment.label_id %></td>
    <td><%= garment.color_id %></td>
    <td><%= garment.print_id %></td>
    <td><%= garment.season %></td>
    <td><%= garment.year %></td>
    <td><%= garment.description %></td>
    <td><%= link_to 'Show', garment %></td>
    <td><%= link_to 'Edit', edit_garment_path(garment) %></td>
    <td><%= link_to 'Destroy', garment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

